<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:padding="12sp"
    android:id="@+id/myHome_Scrollview"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <!--   第一排-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:orientation="horizontal"

            >


            <LinearLayout

                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/my_localMusic"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="2"
                    android:src="@drawable/ic_localsong" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:text="本地音乐"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/colorNormalText"

                    />
            </LinearLayout>

            <LinearLayout

                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/my_star"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="2"
                    android:src="@drawable/ic_star" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:text="我的收藏"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/colorNormalText"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/downland_music"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/my_downlandMusic"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="2"
                    android:src="@drawable/ic_download" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:text="下载管理"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/colorNormalText"/>
            </LinearLayout>

            <LinearLayout

                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/my_newSong"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="2"
                    android:src="@drawable/ic_newsong"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:text="新歌发现"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/colorNormalText"
                    />
            </LinearLayout>


        </LinearLayout>

<!--        我的音乐-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:orientation="horizontal"
            android:layout_marginTop="10sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="我的音乐"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorNormalText"
                android:gravity="center"/>

            <Button
                android:id="@+id/my_myMusic_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="更多   >"
                android:textColor="@color/gray"
                android:textSize="13sp"
                android:background="#fff"




                />
        </RelativeLayout>

<!--        我的音乐图片展示,在这里设置3个background-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:orientation="horizontal"
            >

<!--FrameLayout的background：设置背景图  imageview中设置Icon的图片   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/my_myMusic_favor"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5sp"
                android:background="@drawable/pic"
                app:cardBackgroundColor="@color/gray"
                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pic">
                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:src="@drawable/ic_heart"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30sp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:text="我喜欢的音乐"
                        android:textColor="@color/colorNormalText"
                        android:textSize="12sp" />

                </FrameLayout>

            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:id="@+id/my_myMusic_recentPlay"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5sp"
                android:background="@drawable/pic"
                app:cardBackgroundColor="@color/gray"
                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pic">
                    <ImageView

                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:src="@drawable/ic_recentplay"
                        android:layout_gravity="center"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30sp"

                        android:gravity="center"
                        android:text="最近播放"
                        android:textColor="@color/colorNormalText"
                        android:textSize="12sp"
                        android:layout_gravity="center_horizontal|bottom"/>

                </FrameLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/my_myMusic_newRecommend"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5sp"
                android:background="@drawable/pic"
                app:cardBackgroundColor="@color/gray"
                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pic">
                    <ImageView

                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:src="@drawable/ic_tuijian1"
                        android:layout_gravity="center"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30sp"
                        android:textSize="12sp"
                        android:text="最新推荐"
                        android:textColor="@color/colorNormalText"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal|bottom"
                        />
                </FrameLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>

<!--        创建歌单-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:orientation="horizontal"
            android:layout_marginTop="10sp">
            <TextView
                android:id="@+id/myHome_tv1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="创建歌单"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorNormalText"
                android:gravity="center"/>

<!--            z这里设置新建歌单的数量 @+id/my_create_num-->
            <TextView
                android:id="@+id/my_create_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/gray"
                android:gravity="center"
                android:layout_toRightOf="@+id/myHome_tv1"/>

            <Button
                android:id="@+id/my_create_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="新建   +"
                android:textColor="@color/gray"
                android:textSize="13sp"
                android:background="#fff"




                />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/my_home_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>