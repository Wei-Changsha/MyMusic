<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200sp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/discovery_list_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="歌单精选站"
                android:textColor="@color/lightBlack"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_marginRight="100sp"/>

            <Button
                android:id="@+id/discovery_list_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="查看更多"
                android:textColor="@color/lightBlack" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="4"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/discovery_list_pic1"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="5"
                    android:layout_gravity="center"
                    android:layout_marginRight="5sp"
                    android:src="@drawable/pic"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:id="@+id/discovery_list_text1"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:text="跑步听的快节奏歌曲"
                    android:textColor="@color/lightBlack"
                    android:gravity="center"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/discovery_list_pic2"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="4"
                    android:layout_gravity="center"

                    android:src="@drawable/pic"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:id="@+id/discovery_list_text2"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:text="跑步听的快节奏歌曲"
                    android:textColor="@color/lightBlack"
                    android:gravity="center"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/discovery_list_pic3"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="4"
                    android:layout_gravity="center"
                    android:src="@drawable/pic"
                    android:layout_marginLeft="5sp"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:id="@+id/discovery_list_text3"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:text="跑步听的快节奏歌曲"
                    android:textColor="@color/lightBlack"
                    android:gravity="center"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>