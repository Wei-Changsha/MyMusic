<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="60sp"

    android:orientation="horizontal"

    >

    <TextView
        android:id="@+id/song_rank"
        android:layout_width="32sp"
        android:layout_height="match_parent"
        android:text="1"
        android:textColor="@color/gray"
        android:textSize="16sp"
        android:paddingLeft="12sp"
        android:layout_marginRight="15sp"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/song_rank"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/list_song_name"
            android:layout_width="wrap_content"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="歌曲名称"
            android:textSize="16sp"
            android:textColor="@color/colorNormalText"
            android:layout_alignRight="@id/song_rank"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="80sp"/>
        <TextView
            android:id="@+id/list_song_singer"
            android:layout_width="wrap_content"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:text="歌手-专辑"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:layout_alignRight="@id/song_rank"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="80sp"
            android:paddingBottom="5sp"
            />


    </LinearLayout>

    <ImageView

        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_gravity="center_vertical|right"
        android:src="@drawable/ic_play1"
        android:layout_toLeftOf="@id/list_song_more"

        android:layout_marginTop="15sp"
        />

    <ImageView
        android:id="@+id/list_song_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:src="@drawable/ic_more2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15sp"
       />




</RelativeLayout>